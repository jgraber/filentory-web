<% title("Overview") %>

<h1>Welcome to Filentory</h1>

<div class="col-md-3">
<h2>Overview</h2>
<table  class="table">
  <tbody>
    <tr>
      <td>#Datafiles:</td><td><%= @statistics.count %></td>
    </tr>
    <tr>
      <td>Total size:</td><td><%= @statistics.total %></td>
    </tr>
    <tr>
      <td>Minimum size:</td><td><%= @statistics.min %></td>
    </tr>
    <tr>
      <td>Maximum size:</td><td><%= @statistics.max %></td>
    </tr>
    <tr>
      <td>Average size:</td><td><%= @statistics.average %></td>
    </tr>
  </tbody>
</table>
</div>

<div class="col-md-3" name="datastoretypes">
<h2>Types of Datastores</h2>
<table  class="table table-striped">
  <thead>
    <tr><th>Mediatype</th><th>Count</th></tr>
  </thead>
  <tbody>
    <% @datastore_types.each do |ds| %>
    <tr>
      <td><%= ds[0] %></td><td><%= ds[1] %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
