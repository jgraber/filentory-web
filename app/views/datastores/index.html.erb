<% title("Datastores") %>

<h1>Datastores</h1>

<div class="col-md-8 text-right">
  <%= link_to "New Datastore", new_datastore_path, class: "btn btn-success" %>
  <%= link_to "New File", new_datafile_path, class: "btn btn-success" %>
</div>

<div class="col-md-8">
<table  class="table table-striped">
  <thead>
    <tr><th>Id</th><th>Name</th><th>Type</th><th>Size</th><th># Files</th></tr>
  </thead>
  <tbody>
    <% @datastores.each do |ds| %>
    <tr>
      <td><%= ds.id %></td><td><%= link_to ds.name, ds %></td><td><%= ds.mediatype %></td><td></td><td></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
